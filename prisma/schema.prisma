generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Live {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  date        DateTime
  link        String
  image       String

  @@index([title])
}

model FAQ {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  question String
  answer   String

  @@index([question])
}

model Stats {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  platform String
  stats    Float
  goal     Float

  @@index([platform])
}
